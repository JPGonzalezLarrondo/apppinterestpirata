 <div class="jumbotron">
  <div class="container">
    <h1>Listing pins</h1>

    <% @pins.each do |pin| %>
      <div class="col-md-3">
        <div class="thumbnail">
          <%= pin.description %>
          <%= image_tag(pin.photo.url, :class => 'img-responsive') %>
          <div class="buttons" style="margin-top:10px; margin-bottom:10px">        
            <%= link_to 'Show', pin, :class => 'btn btn-primary' %>
            <%= link_to 'Edit', edit_pin_path(pin), :class => 'btn btn-success' %>
            <% if user_signed_in? %>
            <%= link_to 'Destroy', pin, method: :delete, data: { confirm: 'Are you sure?' }, :class => 'btn btn-alert' %>
            <% end %>
          </div>
        </div> 
      </div>
    <% end %>

    <br>
    <%= link_to 'New Pin', new_pin_path %>
  </div>
 </div> 